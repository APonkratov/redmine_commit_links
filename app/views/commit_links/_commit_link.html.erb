<%= content_tag(:div, id: "commit-#{commit.id}", class: "commit commit-#{commit.provider}") do %>
  <%= content_tag(:span,
                  commit.repo_name,
                  class: "commit-branch") %>
  <%= content_tag(:span,
                  commit.branch,
                  class: "commit-branch") %>
  <%= content_tag(:span,
                  commit.display_id,
                  class: 'commit-id') %>
  <%= link_to(commit.title, commit.url) %>
  <span class="commit-by-line">
    <%= l(:mrl_label_by) %>
    <%= content_tag(:span,
                    commit.author_name,
                    class: 'commit-author') %>
  </span>
<% end %>
