<%= content_tag(:div, id: "commit-#{commit.id}", class: "commit commit-#{commit.provider}") do %>
  <%= content_tag(:span,
                  link_to(commit.repo_name, commit.repo_url),
                  class: "commit-branch") %>
  <%= content_tag(:span,
                  commit.branch,
                  class: "commit-branch") %>
  <%= content_tag(:span,
                  link_to(commit.display_id, commit.url),
                  class: 'commit-id') %>
  <%= commit.title %>
  <span class="commit-by-line">
    <%= l(:mrl_label_by) %>
    <%= content_tag(:span,
                    commit.author_name,
                    class: 'commit-author') %>
  </span>
<% end %>
