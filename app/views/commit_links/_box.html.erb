<% if User.current.allowed_to?(:view_associated_commits, @project) %>
  <% commits = Commit.find_all_by_issue(@issue) %>

  <div id="issue-commits">
    <h3><%= l(:mrl_label_associated_commits) %></h3>
    <% if commits.present? %>
      <%= render(partial: 'commit_links/commit_link',
                 collection: Commit.find_all_by_issue(@issue),
                 as: :commit) %>
    <% end %>
  </div>
<% end %>
